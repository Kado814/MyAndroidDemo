<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.myapplication.myandroiddemo.diyview.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:flChildSpacing="auto"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp">

            <Button
                android:id="@+id/btn_sqllite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_name_sqllite"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_name_camera"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_expandableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可折叠TextView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_spannablestringbuilder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百变文字"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_nestedscrolling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nestedscrolling"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_immersive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沉浸式"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_diyview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义表盘"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_jsoup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jsoup解析HTML"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TouchEvent机制"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_2048"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2048"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rxjava"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载apk"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ConstraintLayout"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socket"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/coordinator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CoordinatorLayout"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annotation"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bmobSDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bmobSDK"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/kotlin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kotlin"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间线"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/initFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fragment初始化"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/vectorDrawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VectorDrawable"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/gravitySensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重力感应球"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/lottie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lottie动画"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/webView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="webView"
                android:textAllCaps="false" />

        </com.myapplication.myandroiddemo.diyview.FlowLayout>
    </ScrollView>

</LinearLayout>

